mixin devicesForStore(id)
  p(style="color:#000000;")
    strong Devices in Cafetria number #{id}
  ul.devices
    li.device(style="background-image: url('/img/door-locked.svg')") 
      code
        strong Toilet Cafeteria:#{id}
        | &nbsp;
        span(id=`door${id}`)
    li.device(style="background-image: url('/img/bell-off.svg')") 
      code 
        strong Order Ready Alarm Cafetria:#{id}
        | &nbsp;
        span(id=`bell${id}`)
    li.device(style="background-image: url('/img/motion-sensor.svg')") 
      code 
        strong New Costumer Cafeteria:#{id}
        | &nbsp;
        span(id=`motion${id}`)
    li.device(style="background-image: url('/img/lamp-off.svg')") 
      code 
        strong Lights Cafeteria:#{id}
        | &nbsp;
        span(id=`lamp${id}`)
  form.device(action="/device/command")
    input(type="text" style="display:none" name="id" value=`${id}`)
    select(name="action")
      option(value="ring") Ring Order Finished Alarm
      option(value="unlock") Open Toilet
      option(value="locked") Locked Toilet
      option(value="open") Mark Toilet Free
      option(value="close") Mark Toilet Occupied
      option(value="presence") New Costumer
      option(value="on") Lamp On
      option(value="off") Lamp Off
    | &nbsp;
    input(type="submit" value=`Send` class="button")
