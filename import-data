# Ensure that actuators are minimally provisioned.

#!/bin/bash"

# Update Store Entities and their associated devices
curl -s -o /dev/null -X POST \
  'http://orion:1026/v2/op/update' \
  -H 'Content-Type: application/json' \
  -d '{
    "actionType": "append",
    "entities": [
      {
        "id": "urn:ngsi-ld:Bell:001",
        "type": "Alert",
        "name": { "type": "Text", "value": "New Customer Alert" },
        "state": { "type": "Text", "value": "quiet" }
      },
      {
        "id": "urn:ngsi-ld:Door:001",
        "type": "Toilet",
        "name": { "type": "Text", "value": "Toilet Door" },
        "state": { "type": "Text", "value": "free" }
      },
      {
        "id": "urn:ngsi-ld:Lamp:001",
        "type": "Light",
        "name": { "type": "Text", "value": "Main Entrance Lights" },
        "state": { "type": "Text", "value": "off" }
      }
    ]
}'

#
